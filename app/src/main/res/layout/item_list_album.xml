<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_list_drawable"
    android:layout_marginLeft="@dimen/_16_dp"
    android:layout_marginRight="@dimen/_16_dp"
    android:layout_marginTop="12dp">

    <ImageView
        android:id="@+id/music_cover_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:cropToPadding="true"
        android:scaleType="centerInside"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/music_album_text_view"
            android:text="text"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/music_artist_text_view"
            android:text="text"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>